{
  "$schema": "/home/vanzuh/.nix-profile/etc/xdg/swaync/configSchema.json",
  "cssPriority": "user",
  "control-center-margin-bottom": 40,
  "timeout": 5,
  "timeout-low": 3,
  "fit-to-screen": false,
  "control-center-width": 470,
  "control-center-height": 1000,
  "notification-window-width": 470,
  "image-visibility": "always",
  "widgets": [
    "mpris",
    "buttons-grid",
    "volume",
    "backlight",
    "slider",
    "title",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": ""
    },
    "mpris": {
      "show-album-art": "always",
      "loop-carousel": true
    },
    "volume": {
      "label": "󰎇",
      "expand-button-label": "󰘖",
      "collapse-button-label": "󰁄",
      "show-per-app": true,
      "show-per-app-icon": true,
      "show-per-app-label": false
    },
    "backlight": {
      "label": "󰃟",
      "device": "intel_backlight"
    },

    "backlight#amdgpu": {
      "label": "󰋹",
      "device": "amdgpu_bl1"
    },

    "slider#vanzuh": {
      "label": "󰌌",
      "max": 3,
      "max_limit": 3,
      "cmd_getter": "vanzuh-kbd-backlight get",
      "cmd_setter": "vanzuh-kbd-backlight set $value"
    },

    "slider": {
      "label": "󰌌",
      "max": 2,
      "max_limit": 2,
      "cmd_getter": "cat /sys/class/leds/dell::kbd_backlight/brightness",
      "cmd_setter": "/home/diego/scripts/kbd-backlight-set $value"
    },
    "buttons-grid": {
      "buttons-per-row": 4,
      "actions": [
        {
          "label": "󰗼",
          "command": "hyprctl dispatch exit"
        },
        {
          "label": "󰍁",
          "command": "hyprlock"
        },
        {
          "label": "󰜉",
          "command": "reboot"
        },
        {
          "label": "",
          "command": "shutdown now"
        },
        {
          "label": "󰤨",
          "type": "toggle",
          "command": "networkmanager_dmenu",
          "update-command": "sh -c 'nmcli radio wifi | grep -q enabled && echo true || echo false'"
        },
        {
          "label": "",
          "type": "toggle",
          "command": "/home/diego/.config/eww/scripts/bluetuith-swaync.sh",
          "update-command": "/home/diego/scripts/bluetooth-status.sh"
        },
        {
          "label": "󰖔",
          "type": "toggle",
          "command": "/home/diego/.config/eww/scripts/toggle-night-mode.sh",
          "update-command": "/home/diego/.config/eww/scripts/toggle-night-mode.sh status"
        },
        {
          "label": "",
          "type": "toggle",
          "command": "/home/diego/.config/eww/scripts/toggle-dnd.sh",
          "update-command": "/home/diego/.config/eww/scripts/get-dnd-status.sh"
        }
      ]
    }
  },
  "ignore-gtk-theme": true,
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "layer-shell-cover-screen": true,
  "control-center-margin-top": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout-critical": 0,
  "relative-timestamps": true,
  "keyboard-shortcuts": true,
  "notification-grouping": true,
  "transition-time": 200,
  "hide-on-action": true,
  "text-empty": "No Notifications",
  "script-fail-notify": true,
  "scripts": {
    "example-script": {
      "exec": "echo 'Do something...'",
      "urgency": "Normal"
    },
    "example-action-script": {
      "exec": "echo 'Do something actionable!'",
      "urgency": "Normal",
      "run-on": "action"
    }
  },
  "notification-visibility": {
    "example-name": {
      "state": "muted",
      "urgency": "Low",
      "app-name": "Spotify"
    }
  }
}
