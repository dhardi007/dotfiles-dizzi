@import "~/.cache/wal/colors-rofi-dark.rasi"

/**
 * Abuku Color Theme
 * User: Abuku
 * Copyright: Hayya U
 */


configuration {
    modi:                    "drun,run";
    font:                    "JetBrainsMono Nerd Font, Mononoki 14";
    show-icons:              true;
    hover-select:            false;
    scroll-method:           1;
    me-select-entry:         "";
    me-accept-entry:         "MousePrimary";
    drun-display-format:     "{name}";
    window-format:           "{w} · {c} · {t}";
    
}

window {
    width:                   800px; /* Aumentado el ancho para la cuadrícula */
    x-offset:                0px;
    y-offset:                0px;
    spacing:                 0px;
    padding:                 10px;
    margin:                  0px; 
    border:                  0px;
    border-color:            transparent;
    cursor:                  "default";
    transparency:            "real";
    location:                center;
    anchor:                  center;
    fullscreen:              false;
    enabled:                 true;
    border-radius:           12px;
}

mainbox {
    enabled:                 true;
    orientation:             vertical;
    spacing:                 0px;
    margin:                  0px;
    background-color:        transparent;
    children:                ["listbox"];
}

listbox {
    spacing:                 4px;
    background-color:        transparent;
    orientation:             vertical;
    children:                [ "inputbar", "listview" ];
}

listview {
    columns:                 4; /* Ajustado a 4 columnas para la cuadrícula */
    lines:                   3; /* 3 filas visibles */
    fixed-height:            false; /* Importante para que las miniaturas no se corten */
    fixed-columns:           true;
    cycle:                   true;
    scrollbar:               false;
    border:                  0px solid;
    spacing:                 12px; /* Espaciado entre miniaturas */
    border-radius:           8px;
}


prompt {
    padding:                 0 5px 0 5px;
    text-color:              @selected-normal-background;
    background-color:        transparent;
}

inputbar {
    children:                ["prompt", "entry"];
    spacing:                 2px;
    border-radius:           8px;
    padding:                 4px;
    background-color:        transparent;
}

entry {
    placeholder:             "Search";
    padding:                 2px;
    background-color:        transparent;
    text-color:              @foreground;
}

element {
    orientation:             vertical;
    spacing:                 8px;
    padding:                 8px;
    border:                  1px solid;
    border-radius:           8px;
    background-color:        transparent;
    text-color:              @foreground;
}

element-icon {
    size:                    128px;
    background-image:        url("element-icon");
    border-radius:           4px;
    background-color:        transparent;
}

element-text {
    enabled:                 true;
    horizontal-align:        0.5;
    vertical-align:          0.5;
    text-color:              @foreground;
}

element normal.normal {
    background-color:        transparent;
    text-color:              @normal-foreground;
}

element alternate.normal {
    background-color:        transparent;
    text-color:              @alternate-normal-foreground;
}

element selected.normal {
    background-color:        @selected-normal-background; /* si le cambio a @transparent le quito el fondo al seleccionado */
    text-color:              @selected-normal-foreground;
    border:                  1px solid;
    border-color:            @selected-active-foreground;
    border-radius:           10px;
}

