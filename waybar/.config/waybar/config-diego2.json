{
  // --- Configuraci√≥n Principal ---
  "layer": "top",
  "position": "top",
  "reload_style_on_change": true,
  // --- M√≥dulos a la Izquierda ---
  "modules-left": [
    "clock",
    "custom/logo",
    "custom/love",
    "custom/Lil_bro",
    "disk",
    "memory",
    "cpu",
    "temperature"
  ],
  // --- M√≥dulos al Centro ---
  "modules-center": ["hyprland/workspaces"],
  // --- M√≥dulos a la Derecha ---
  "modules-right": [
    "custom/mpris",
    "tray",
    "hyprland/window",
    "custom/colorpicker",
    "pulseaudio",
    "group/networking",
    "battery",
    "custom/updates",
    "custom/notification-center",
    "custom/poweroff"
  ],
  // --- Definiciones de M√≥dulos ---
  "custom/logo": {
    "format": "Û∞ä†",
    "tooltip": false,
    "on-click": "rofi -show drun"
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "‰∏Ä",
      "2": "‰∫å",
      "3": "‰∏â",
      "4": "Âõõ",
      "5": "‰∫î",
      "6": "ÂÖ≠",
      "7": "‰∏É",
      "8": "ÂÖ´",
      "9": "‰πù",
      "10": "ÂçÅ",
      "urgent": "Û∞Ä®",
      "active": "„Äá"
    },
    "persistent-workspaces": {
      "*": [1, 2, 3]
    }
  },

  "disk": {
    "interval": 30,
    "format": "ÔáÄ {percentage_used}%",
    "path": "/"
  },
  "memory": {
    "format": "Óâ¶ {percentage}%"
  },
  "cpu": {
    "interval": 1,
    "format": "Ó∫ú {usage}%",
    "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"]
  },
  "temperature": {
    "format": "Ôãâ {temperatureC}¬∞C",
    "format-critical": "Ôãá {temperatureC}¬∞C",
    "interval": 1,
    "critical-threshold": 80,
    "on-click": "foot btop"
  },

  "custom/love": {
    "format": "{} Û∞©ó ",
    "exec": "bun ~/dotfiles/polybar/.config/polybar/scripts/love.ts"
  },

  "custom/Lil_bro": {
    "format": "2B, KAINE! ‚ô• Û∞©ó ",
    "tooltip": false
  },

  "clock": {
    // Formato inicial: Tu mensaje de 2B/Kaine
    "format": "2B, KAINE! ‚ô• Û∞©ó ",
    "format": "{:%I:%M:%S %p}",
    "interval": 1,
    "tooltip-format": "\n<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "calendar-weeks-pos": "right",
    "today-format": "<span color='#7645AD'><b><u>{}</u></b></span>",
    "format-calendar": "<span color='#aeaeae'><b>{}</b></span>",
    "format-calendar-weeks": "<span color='#aeaeae'><b>W{:%V}</b></span>",
    "format-calendar-weekdays": "<span color='#aeaeae'><b>{}</b></span>"
  },
  "custom/colorpicker": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "exec": "~/.config/waybar/scripts/colorpicker.sh -j",
    "on-click": "sleep 1 && ~/.config/waybar/scripts/colorpicker.sh"
  },

  "battery": {
    "interval": 1,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20
    },
    "format": "{capacity}%  {icon} ",
    "format-charging": "{capacity}% Û∞ÇÑ ",
    "format-plugged": "{capacity}% Û∞ÇÑ ",
    "format-alt": "{time} {icon}",
    "format-icons": ["Û∞Åª", "Û∞Åº", "Û∞Åæ", "Û∞ÇÄ", "Û∞ÇÇ", "Û∞Åπ"]
  },

  "custom/updates": {
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/myUpdates.sh",
    "interval": 1,
    "on-click": "~/.config/waybar/scripts/myUpdates.sh click",
    "on-click-right": "~/.config/waybar/scripts/myUpdates.sh click"
    // ---   "on-click-right": "kitty -e sudo pacman -Syu" ---
  },

  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% Û∞Ç∞",
    "format-muted": "<span font='12'></span>",
    "format-icons": {
      "headphones": "",
      "bluetooth": "Û∞•∞",
      "handsfree": "",
      "headset": "Û±°¨",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["üï®", "üï©", "üï™"]
    },
    "justify": "center",
    "on-click": "~/scripts/pavucontrol.sh",
    "tooltip-format": "{icon}  {volume}%"
  },

  "network": {
    "format-wifi": "Ôá´",
    "format-ethernet": "üñß",
    "format-disconnected": "Û∞§†",
    "tooltip-format": "{ipaddr}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)  | {ipaddr}",
    "tooltip-format-ethernet": "{ifname} üñß | {ipaddr}",
    "on-click": "networkmanager_dmenu",
    "on-click-right": "networkmanager_dmenu"
  },

  "network#speed": {
    "format": "{bandwidthDownBits}",
    "interval": 1,
    "tooltip-format": "{ipaddr}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)   \n{ipaddr}",
    "tooltip-format-ethernet": "{ifname} Û∞àÄ \n{ipaddr}",
    "tooltip-format-disconnected": "Not Connected",
    "tooltip": true,
    "on-click": "pgrep -x rofi &>/dev/null && notify-send rofi || networkmanager_dmenu",
    "on-click-right": "networkmanager_dmenu"
  },

  "group/networking": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false
    },
    "modules": ["network", "network#speed"]
  },
  "hyprland/window": {
    "format": "( {class} )",
    "rewrite": {
      "(.*) - Mozilla Firefox": "üåé $1",
      "org.telegram.desktop": "> [$1]",
      "org.gnome.Nautilus": "> [$1]",
      "(.*) - zsh": "> [$1]"
    }
  },

  "custom/poweroff": {
    "format": "ÔÄë",
    "on-click": "~/scripts/power_management.sh",
    "on-click-right": "~/scripts/power_management.sh",
    "return-type": "json"
  },

  "tray": {
    "icon-size": 18,
    "spacing": 10
  },

  "custom/mpris": {
    "format": "{text}",
    "tooltip": true,
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/mpris-cover.sh",
    "on-click": "playerctl --ignore-player=firefox,google-chrome-stable,chromium play-pause",
    "on-scroll-up": "playerctl --ignore-player=firefox,google-chrome-stable,chromium next",
    "on-scroll-down": "playerctl --ignore-player=firefox,google-chrome-stable,chromium previous",
    "interval": 1,
    "format-icons": {
      "Playing": "‚ñ∂",
      "Paused": "‚è∏",
      "Stopped": "‚ô´"
    },
    "format-paused": "{icon_cover} {status} {title}",
    "format-playing": "{icon_cover} {status} {title}",
    "format-stopped": "{icon} No hay m√∫sica reproduci√©ndose"
  },
  "custom/notification-center": {
    "format": "Ó°É",
    "tooltip-format": "Notification center",
    "on-click": "swaync-client -t"
  }
}
